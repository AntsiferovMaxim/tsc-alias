{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": ["dom", "es2018"],
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": ".",
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "pretty": true,
    "newLine": "lf"
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "**/tests",
    "**/dist",
    "**/example",
    "node_modules"
  ],
  "include": ["**/*.ts", "**/package.json"]
}
