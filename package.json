{
  "name": "tsc-alias",
  "version": "1.2.3",
  "description": "Replace absolute paths to relative paths after typescript compilation",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "bin": {
    "tsc-alias": "dist/bin/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "prepublish": "npm run build",
    "postversion": "git push && git push --tags && npm publish",
    "format": "prettier --write \"**/*.{js,ts}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justkey007/tsc-alias.git"
  },
  "keywords": [
    "typescript",
    "paths",
    "alias",
    "absolute path",
    "relative path",
    "compilation",
    "tsc"
  ],
  "author": "Juskey B.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justkey007/tsc-alias/issues"
  },
  "homepage": "https://github.com/justkey007/tsc-alias.git",
  "dependencies": {
    "@jfonx/console-utils": "^1.0.3",
    "@jfonx/file-utils": "^3.0.1",
    "chokidar": "^3.5.0",
    "commander": "^6.2.1",
    "find-node-modules": "^2.1.0",
    "globby": "^11.0.2",
    "normalize-path": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^11.12.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  }
}
