{
  "extends": "@jkm/tsconfig", /* from node_modules */
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "myproject/*": ["./*"],
      "@commons": ["lib/commons/index.ts"],
      "custom/*": ["custom_modules/*"]
    }
  },
  "exclude": ["node_modules"]
}
